@model DomainModels.Entities.UserLogin

@{
    ViewData["Title"] = "ForgetPassowrd";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<p class="login-box-msg" style="color:darkorange">Enter your email <span style="color:midnightblue">to get your password</span></p>
<form asp-action="GetPassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group has-feedback">
        @*<input type="email" class="form-control" name="userid" required placeholder="Email">*@
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="row">
        <!-- /.col -->
        <div class="col-xs-6 pull-right">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Get Password</button>
        </div>
        @*<div class="col-xs-6 pull-right">
                <span style="color:midnightblue">New User ?</span> <a href="@Url.Action("Register","Account")" style=" color:darkorange" class="text-center">Register</a>
                <br>
            </div>*@

        <!-- /.col -->
    </div>

    <div style="text-align:center" class="row">
        <br />
        @if (TempData["psw"] != null)
        {
            var password = TempData["psw"];
            string a = "Your Password is : " + password;
        <span style="font-weight:bold; color:orange">  @a</span>
        }

    </div>
</form>




<hr />
<div class="clearfix"></div>
<div style="text-align:center">

    <a href="@Url.Action("Login","Account")" class="text-center"><span style="color:midnightblue">Sign </span>In</a>
    <br />
</div>

